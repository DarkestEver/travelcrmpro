# Environment Variables

# App Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v2

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Request Configuration
REQUEST_ID_HEADER=X-Request-Id
INCLUDE_TRACE_ID=true

# Security
CORS_ORIGIN=http://localhost:5176
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/travel-crm-v2

# Cache (Redis)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=30d

# Email Service
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@travelcrm.com
EMAIL_FROM_NAME=Travel CRM

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Configuration (if using SES)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# File Storage (S3 or MinIO)
STORAGE_TYPE=s3
AWS_S3_BUCKET=travel-crm-uploads
AWS_S3_REGION=us-east-1
# Or for MinIO
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=travel-crm-uploads

# Payment Providers
PAYMENTS_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret

# Webhooks
WEBHOOK_SIGNING_SECRET=your-webhook-signing-secret
WEBHOOK_MAX_RETRIES=6
WEBHOOK_RETRY_BACKOFF_MS=1000

# Currency & Locale
DEFAULT_CURRENCY=INR
SUPPORTED_CURRENCIES=INR,USD,EUR,GBP
FX_PROVIDER=exchangerate-api
FX_API_KEY=your-fx-api-key
FX_RATE_CACHE_TTL=3600

# Internationalization
DEFAULT_LOCALE=en-IN
SUPPORTED_LOCALES=en-IN,en-US,hi-IN
DEFAULT_TIMEZONE=Asia/Kolkata
BUSINESS_HOURS_TZ=Asia/Kolkata

# Tax Configuration
TAX_ENGINE_REGION=IN
TAX_ROUNDING_MODE=half_up

# Bull Queue (Redis-based)
BULL_REDIS_URL=redis://localhost:6379/1

# PDF Generation
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
# Leave empty for bundled Chromium

# Observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_OAUTH=false
